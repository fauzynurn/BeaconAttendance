<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".main.MainActivity">

    <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Your record : "
            android:id="@+id/attendance"/>

    <TextView android:layout_centerInParent="true" android:layout_below="@id/attendance" android:id="@+id/error" android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="no error"/>

</RelativeLayout>